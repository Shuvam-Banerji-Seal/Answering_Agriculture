# Agriculture Bot Searcher - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# API Keys (Optional but recommended for enhanced features)
# =============================================================================

# SarvamAI API Key - Get from https://sarvam.ai/
# Provides high-quality voice transcription for Indian languages
SARVAM_API_KEY=your_sarvam_api_key_here

# HuggingFace Token - Get from https://huggingface.co/settings/tokens
# Required for downloading some models
HUGGINGFACE_TOKEN=your_huggingface_token_here

# =============================================================================
# Model Configuration
# =============================================================================

# AI4Bharat Conformer Model Path
# Download from AI4Bharat repositories
CONFORMER_MODEL_PATH=./models/conformer.nemo

# IndicTrans2 Model Configuration
INDIC_TRANS_MODEL=ai4bharat/indictrans2-indic-en-dist-200M

# =============================================================================
# Device and Performance Settings
# =============================================================================

# Compute device - set to 'cpu' if no GPU available
TORCH_DEVICE=cuda

# Memory optimization
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128

# Disable tokenizer parallelism to avoid warnings
TOKENIZERS_PARALLELISM=false

# =============================================================================
# Ollama Configuration
# =============================================================================

# Ollama base port (default: 11434)
OLLAMA_BASE_PORT=11434

# Number of Ollama agents to run (default: 2)
OLLAMA_NUM_AGENTS=2

# Ollama models to use
OLLAMA_MODELS=llama2,codellama

# =============================================================================
# Web Interface Settings
# =============================================================================

# Web interface host (default: 0.0.0.0)
WEB_HOST=0.0.0.0

# Web interface port (default: 5000)
WEB_PORT=5000

# Enable debug mode (default: false)
DEBUG=false

# =============================================================================
# Voice Transcription Settings
# =============================================================================

# Primary transcription service: 'sarvam' or 'conformer'
PRIMARY_TRANSCRIPTION_SERVICE=sarvam

# Enable fallback to secondary service if primary fails
ENABLE_TRANSCRIPTION_FALLBACK=true

# Default language for voice input
DEFAULT_VOICE_LANGUAGE=mr

# Maximum audio file size in MB
MAX_AUDIO_FILE_SIZE=50

# =============================================================================
# Search and Response Settings
# =============================================================================

# Default number of web searches per query
DEFAULT_NUM_SEARCHES=2

# Default answer mode: 'detailed' or 'exact'
DEFAULT_ANSWER_MODE=detailed

# Maximum response length in characters
MAX_RESPONSE_LENGTH=2000

# Search timeout in seconds
SEARCH_TIMEOUT=30

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=./logs/agri_bot.log

# Enable console logging
CONSOLE_LOGGING=true

# =============================================================================
# Development Settings (Optional)
# =============================================================================

# Enable development mode features
DEVELOPMENT_MODE=false

# Cache search results for faster testing
ENABLE_SEARCH_CACHE=false

# Cache directory
CACHE_DIR=./cache

# =============================================================================
# Security Settings (Production)
# =============================================================================

# Secret key for Flask sessions (generate a random string)
SECRET_KEY=your-secret-key-here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Enable HTTPS redirect in production
FORCE_HTTPS=false
